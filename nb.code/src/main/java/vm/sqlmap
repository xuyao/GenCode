<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="$daoClass">
    
    <resultMap type="$modelName" id="$modelObjMap">
    	$resultMap
    	<!--
		<id property="adminId" column="admin_id" />
		<result property="name" column="name" />
		<result property="password" column="password" />
		-->
	</resultMap>
	
	<!--common searchcondtion sql -->
    <sql id="common_search_sql">
      <if test="name != null and name != ''">
        and t.name=#{name}
      </if>
      <if test="password != null and password != ''">
        and t.password=#{password}
      </if>
    </sql>
    
    <sql id="common_select_sql">
      select t.* from t_$modelObj t
    </sql>
    
    <select id="count" parameterType="$modelName" resultType="int">
    	select count(0)
    	from t_$modelObj t
    	where 1=1
		<include refid="common_search_sql"/>
    </select>
    
	<select id="search" parameterType="$modelName" resultMap="$modelObjMap">
		<include refid="common_select_sql"/>
    	where 1=1 
		<include refid="common_search_sql"/>
    </select>
    
    <delete id="delete" parameterType="Integer">
    	delete from imc_contribute
    	where id=#{id}
    </delete>
    
    <insert id="add" parameterType="Contribute" useGeneratedKeys="true" keyProperty="id">
    	insert into t_$modelObj(title,intro,pic,content,sort,html_path,status,exptime,ctime,utime) 
    	values(#{title},#{intro},#{pic},#{content},#{sort},#{html_path},#{status},#{exptime},now(),now())
    </insert>
    
    <update id="update" parameterType="Contribute">
    	update t_$modelObj set intro=#{intro},pic=#{pic},title=#{title},sort=#{sort},
    	content=#{content},html_path=#{html_path},utime=now(),status=#{status},exptime=#{exptime}
    	where id=#{id}
    </update>
    
</mapper>  
